{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GeoView Custom Legend Configuration",
  "description": "Schema for configuring a custom legend in GeoView",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the legend component"
    },
    "enabled": {
      "type": "boolean",
      "description": "Whether the legend is enabled",
      "default": true
    },
    "isOpen": {
      "type": "boolean",
      "description": "Whether the legend panel is open by default",
      "default": true
    },
    "title": {
      "type": "string",
      "description": "Title to display for the legend panel"
    },
    "legendList": {
      "type": "array",
      "description": "List of legend items to display",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the legend item"
          },
          "name": {
            "type": "string",
            "description": "Display name for the legend item"
          },
          "type": {
            "type": "string",
            "enum": ["group", "item"],
            "description": "Type of legend item - 'group' for expandable sections, 'item' for individual legend entries",
            "default": "item"
          },
          "items": {
            "type": "array",
            "description": "Child items (for groups)",
            "items": {
              "$ref": "#/properties/legendList/items"
            }
          },
          "symbol": {
            "type": "object",
            "description": "Symbol configuration for the legend item",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["image", "color", "line", "point", "polygon"],
                "description": "Type of symbol"
              },
              "url": {
                "type": "string",
                "description": "URL to an image symbol (if type is 'image')"
              },
              "color": {
                "type": "string",
                "description": "Color value (hex, rgb, or named color) for the symbol",
                "pattern": "^(#([0-9A-Fa-f]{3}){1,2}|rgb\\(\\s*\\d{1,3}\\s*,\\s*\\d{1,3}\\s*,\\s*\\d{1,3}\\s*\\)|rgba\\(\\s*\\d{1,3}\\s*,\\s*\\d{1,3}\\s*,\\s*\\d{1,3}\\s*,\\s*[01]?\\d?\\d?\\s*\\)|[a-zA-Z]+)$"
              },
              "width": {
                "type": "number",
                "description": "Width of the symbol in pixels",
                "minimum": 1
              },
              "height": {
                "type": "number",
                "description": "Height of the symbol in pixels",
                "minimum": 1
              },
              "stroke": {
                "type": "object",
                "properties": {
                  "color": {
                    "type": "string",
                    "description": "Stroke color"
                  },
                  "width": {
                    "type": "number",
                    "description": "Stroke width in pixels"
                  }
                }
              }
            }
          },
          "description": {
            "type": "string",
            "description": "Optional description text for the legend item"
          },
          "visible": {
            "type": "boolean",
            "description": "Whether the legend item is visible by default",
            "default": true
          },
          "layerId": {
            "type": "string",
            "description": "ID of the layer this legend item is associated with (if any)"
          },
          "filter": {
            "type": "object",
            "description": "Filter configuration for the legend item",
            "properties": {
              "property": {
                "type": "string",
                "description": "Property to filter on"
              },
              "value": {
                "type": ["string", "number", "boolean"],
                "description": "Value to filter by"
              },
              "operator": {
                "type": "string",
                "enum": ["=", "!=", ">", "<", ">=", "<=", "contains", "startsWith", "endsWith"],
                "description": "Comparison operator",
                "default": "="
              }
            }
          }
        },
        "required": ["id", "name"]
      }
    },
    "display": {
      "type": "object",
      "description": "Display configuration for the legend",
      "properties": {
        "orientation": {
          "type": "string",
          "enum": ["vertical", "horizontal"],
          "description": "Orientation of the legend items",
          "default": "vertical"
        },
        "showTitle": {
          "type": "boolean",
          "description": "Whether to show the legend title",
          "default": true
        },
        "showToggle": {
          "type": "boolean",
          "description": "Whether to show the expand/collapse toggle",
          "default": true
        },
        "symbolSize": {
          "type": "object",
          "description": "Default size for symbols",
          "properties": {
            "width": {
              "type": "number",
              "description": "Default width for symbols in pixels",
              "default": 20
            },
            "height": {
              "type": "number",
              "description": "Default height for symbols in pixels",
              "default": 20
            }
          }
        },
        "text": {
          "type": "object",
          "description": "Text styling",
          "properties": {
            "size": {
              "type": "number",
              "description": "Font size in pixels",
              "default": 12
            },
            "color": {
              "type": "string",
              "description": "Text color",
              "default": "#333333"
            },
            "fontFamily": {
              "type": "string",
              "description": "Font family",
              "default": "Arial, sans-serif"
            }
          }
        }
      }
    },
    "version": {
      "type": "string",
      "enum": ["1.0.0"],
      "description": "Schema version"
    }
  },
  "required": ["id", "legendList"]
}