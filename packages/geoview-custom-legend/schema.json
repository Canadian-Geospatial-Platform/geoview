{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GeoView Custom Legend Config Schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "isOpen": {
      "type": "boolean",
      "description": "Whether the custom legend panel is initially open when the map loads.",
      "default": false
    },
    "legendList": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/legendItem"
          }
        }
      },
      "required": ["children"]
    }
  },
  "definitions": {
    "legendItem": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "symbologyStack": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "image": {
                "type": "string"
              },
              "text": {
                "type": "string"
              }
            }
          }
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/legendItem"
          }
        }
      }
    }
  },
  "version": {
  "type": "string",
  "enum": ["1.0"],
  "description": "Schema version used to validate this configuration."
},
  "required": ["legendList"]
}